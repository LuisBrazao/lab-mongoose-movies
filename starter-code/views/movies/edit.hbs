<h1>Edit Celebrity</h1>
<form action="/movies/{{movie._id}}" method="POST">
  <label>
    Title
    <input type="text" name="title" value="{{movie.title}}">
  </label>
  <label>
    Genre
    <input type="text" name="genre" value="{{movie.genre}}">
  </label>
  <label>
    Plot
    <input type="text" name="plot" value="{{movie.plot}}">
  </label>
  <label>
    Celebrity
    <select name="celebrity" id="" required>
      {{#each celebs}}
      {{#eq this.name ../movie.celebrity.name}}
      <option value="{{_id}}" selected>{{name}}</option>
      {{else}}
      <option value="{{_id}}">{{name}}</option>
      {{/eq}}
      {{/each}}
    </select>
  </label>
  <button type="submit">Update</button>
</form>